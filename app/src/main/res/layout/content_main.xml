<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0eef1"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    tools:context="com.example.paritosh.ldh.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0eef1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4">


    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d50055"
            android:id="@+id/police"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/police"
                android:id="@+id/policeicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="POLICE"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/policeicon"
                android:layout_alignLeft="@+id/policeicon"
                android:layout_alignStart="@+id/policeicon"
                android:id="@+id/policetext" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fe927f"
            android:id="@+id/Ambulance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/ambulanceicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ambulance"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="AMBULANCE"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/ambulanceicon"
                android:layout_centerHorizontal="true"
                android:id="@+id/ambulancetext" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d50055"
            android:id="@+id/hospital"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/hospital2"
                android:id="@+id/hospitalicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="HOSPITAL"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:id="@+id/hospitaltext"
                android:layout_below="@+id/hospitalicon"
                android:layout_alignLeft="@+id/hospitalicon"
                android:layout_alignStart="@+id/hospitalicon" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff7043"
            android:id="@+id/fire"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/fire_brigade"
                android:id="@+id/firebrigadeicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="FIRE BRIGADE"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/firebrigadeicon"
                android:layout_centerHorizontal="true"
                android:id="@+id/firebrigadetext"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#9e8ac4"
            android:id="@+id/govtdept"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/govt_dept"
                android:id="@+id/govtdepartmenticon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="GOVT. DEPT."
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/govtdepartmenticon"
                android:layout_centerHorizontal="true"
                android:id="@+id/govtdepartmenttext"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff7043"
            android:id="@+id/gasAgency"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/lpg_gas"
                android:id="@+id/gasagencyicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="GAS AGENCY"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/gasagencyicon"
                android:layout_centerHorizontal="true"
                android:id="@+id/gasagencytext"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4081"
            android:id="@+id/Beauty"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/beauty_fashion_2"
                android:id="@+id/beautyfashionicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="FASHION"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:id="@+id/beautyNFashiontext"
                android:layout_below="@+id/beautyfashionicon"
                android:layout_alignRight="@+id/beautyfashionicon"
                android:layout_alignEnd="@+id/beautyfashionicon" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#26a69a"
            android:id="@+id/Entertainment"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/entertainment_2"
                android:id="@+id/entertainmenticon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="ENTERTAINMENT"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:layout_below="@+id/entertainmenticon"
                android:layout_centerHorizontal="true"
                android:id="@+id/entertainmenttext" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4081"
            android:id="@+id/shopping"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/shopping"
                android:id="@+id/shoppingicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="SHOPPING"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/shoppingicon"
                android:layout_centerHorizontal="true"
                android:id="@+id/shoppingtext" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4caf50"
            android:id="@+id/Hotel"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/hotel_dhaba"
                android:id="@+id/hotel_dhabaicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="HOTEL"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/hotel_dhabaicon"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f6d900"
            android:id="@+id/transport"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/transport"
                android:id="@+id/transporticon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="TRANSPORT"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/transporticon"
                android:layout_centerHorizontal="true"
                android:id="@+id/transporttext" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4caf50"
            android:id="@+id/education"
        android:onClick="onClick">
            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/education"
                android:id="@+id/educationicon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="EDUCATION"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_below="@+id/educationicon"
                android:layout_centerHorizontal="true"
                android:id="@+id/educationtext" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemBackground="@drawable/pressedgray">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>


